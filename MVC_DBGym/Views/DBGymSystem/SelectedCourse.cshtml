@model MVC_DBGym.Models.Member

@{
    ViewData["Title"] = "SelectedCourse";
}

<h1>SelectedCourse</h1>

@if (TempData["DropSuccessmsg"] != null)
{
    <div class="alert alert-success">
        @TempData["DropSuccessmsg"]
    </div>
}
@if (Model?.Reserve != null && Model.Reserve.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>課程名稱</th>
                <th>課程ID</th>
                <th>教練</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model.Reserve)
            {
                <tr>
                    <td>@enrollment.Course?.CourseName</td>
                    <td>@enrollment.Course?.CourseID</td>
                    <td>@enrollment.Course?.Coach?.CoachName</td>


                    <td>
                        <form asp-action="DropCourse" method="post">
                            <input type="hidden" name="MemberID" value="@Model.MemberID" />
                            <input type="hidden" name="CourseID" value="@enrollment.CourseID" />
                            <button type="submit" class="btn btn-success">退課</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>尚未選課。</p>
}
<div><a asp-action="IndexMember">返回</a></div>


<style>
    body {
        background: #181a1b;
        color: #e6e6e6;
        font-family: 'Segoe UI', 'Microsoft JhengHei', '微軟正黑體', Arial, sans-serif;
        min-height: 100vh;
    }

    h1 {
        color: #fff;
        font-size: 2.3rem;
        font-weight: 700;
        letter-spacing: 2px;
        text-shadow: 0 4px 24px #1e2328;
        margin-bottom: 2rem;
        text-align: center;
    }

    .table {
        background: #212325;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 24px #15181a99;
        width: 100%;
        margin: 0 auto 2rem auto;
    }

        .table th, .table td {
            padding: 1rem;
            vertical-align: middle;
            border: none;
            text-align: center;
        }

        .table td {
            color: #fff !important;
        }


        .table thead th {
            background: #22242b;
            color: #29ffbb;
            font-weight: 600;
            font-size: 1.15rem;
            border-bottom: 2px solid #29ffbb33;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .table tbody tr {
            transition: background 0.2s;
        }

            .table tbody tr:hover {
                background: #25292e;
            }

    .btn-success {
        background: linear-gradient(90deg, #29ffbb, #14c3f6);
        border: none;
        color: #16191b;
        font-weight: bold;
        border-radius: 999px;
        padding: 0.5rem 1.5rem;
        font-size: 1rem;
        transition: transform 0.12s, box-shadow 0.12s;
        box-shadow: 0 2px 8px #29ffbb33;
    }

        .btn-success:hover {
            transform: translateY(-3px) scale(1.07);
            box-shadow: 0 6px 24px #29ffbb55;
            color: #111;
        }

    .alert-success {
        background: linear-gradient(90deg, #1cb973 80%, #14c3f6);
        color: #fff;
        border-radius: 0.6rem;
        border: none;
        padding: 1rem 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 2px 10px #14c3f633;
        text-align: center;
        font-size: 1.1rem;
        font-weight: 500;
    }

    a {
        color: #14c3f6;
        text-decoration: none;
        margin-right: 1.5rem;
        font-weight: 600;
        transition: color 0.16s;
    }

        a:hover {
            color: #29ffbb;
            text-decoration: underline;
        }

    form {
        margin: 0;
        display: inline;
    }
</style>