@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>大無限健身首頁</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="relative min-h-screen font-sans overflow-x-hidden">
    <!-- 背景黑紅漸層與光暈 -->
    <div class="fixed inset-0 z-0 pointer-events-none">
        <div class="absolute inset-0 bg-gradient-to-br from-black via-gray-900 to-red-900 opacity-95"></div>
        <!-- 紅色光暈 -->
        <div class="absolute -top-40 left-1/2 -translate-x-1/2 w-[700px] h-[300px] bg-red-700 opacity-25 rounded-full filter blur-3xl"></div>
        <div class="absolute bottom-0 right-0 w-[400px] h-[200px] bg-pink-900 opacity-30 rounded-full filter blur-2xl"></div>
        <!-- 幾何SVG裝飾 -->
        <svg class="absolute left-10 top-1/2 -translate-y-1/2" width="220" height="220" viewBox="0 0 220 220" fill="none">
            <circle cx="110" cy="110" r="100" stroke="rgba(255,255,255,0.07)" stroke-width="2" />
            <circle cx="110" cy="110" r="70" stroke="rgba(255,80,80,0.18)" stroke-width="4" />
        </svg>
    </div>

    <!-- 導覽列 -->
    <nav class="relative z-10 bg-gradient-to-r from-black via-gray-900 to-red-900 text-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
            <div class="text-2xl font-bold tracking-widest">大無限健身</div>
            <ul class="flex space-x-6 text-sm">

                <li><a href="@Url.Action("課程介紹","Index")" class="hover:text-yellow-300">課程介紹</a></li>
                <li><a href="@Url.Action("教練介紹","Index")" class="hover:text-yellow-300">教練介紹</a></li>
                <a href="#" class="hover:text-yellow-300">選擇課程</a>
                <li>
                    <a href="@Url.Action("Login")" class="bg-pink-600 hover:bg-pink-700 px-4 py-2 rounded text-white font-semibold ml-4">登入</a>
                </li>
            </ul>
            <div>
                <input type="text" placeholder="搜尋" class="px-2 py-1 rounded-md text-black">
            </div>
        </div>
    </nav>

    <div class="fixed left-0 top-0 w-[5%] h-full z-0 overflow-hidden">
        <img src="~/images/gym6.png" class="w-full h-full object-cover" alt="左側裝飾圖片">
    </div>

    <!-- 右側圖片 -->
    <div class="fixed right-0 top-0 w-[5%] h-full z-0 overflow-hidden">
        <img src="~/images/gym7.png" class="w-full h-full object-cover" alt="右側裝飾圖片">
    </div>



    <!-- 主視覺區塊 -->
    <section class="relative z-10 flex items-center justify-center py-16 px-4 text-center">
        <div class="max-w-5xl bg-white/10 rounded-2xl shadow-lg p-8 mx-auto backdrop-blur-sm border border-white/10">
            <!-- Swiper -->
            <div class="swiper myMainSwiper rounded-lg mb-6">
                <div class="swiper-wrapper">
                    <!-- 輪播圖片1 -->
                    <div class="swiper-slide">
                        <img src="~/images/gym8.png" alt="主視覺1"
                             class="rounded-lg shadow-lg mx-auto max-h-64 w-full object-cover border-2 border-white/20">
                    </div>
                    <!-- 輪播圖片2 -->
                    <div class="swiper-slide">
                        <img src="~/images/gym9.png" alt="主視覺2"
                             class="rounded-lg shadow-lg mx-auto max-h-64 w-full object-cover border-2 border-white/20">
                    </div>
                    <!-- 你可以繼續加更多 slide -->
                </div>
                <!-- 左右箭頭按鈕 -->
                <div class="swiper-button-prev !left-0"></div>
                <div class="swiper-button-next !right-0"></div>
                <!-- 下面的小圓點 -->
                <div class="swiper-pagination"></div>
            </div>
            <h1 class="text-4xl sm:text-5xl font-extrabold text-pink-500 mt-2 drop-shadow">LET'S GET MOVING! 動起來</h1>
            <p class="text-white text-lg mt-2 font-medium drop-shadow">我們熱烈歡迎您，一起加入我們的健身行列</p>
           @*  <button class="mt-4 bg-pink-600 hover:bg-pink-700 text-white font-semibold py-2 px-6 rounded-lg shadow-lg transition">教練課加碼</button> *@
        </div>
    </section>

    <section class="relative z-10 py-12 px-4 max-w-4xl mx-auto flex flex-col gap-10">
        <!-- 卡片 1：右上 -->
        <div class="relative rounded-2xl shadow-xl overflow-hidden w-full min-h-[240px]">
            <img src="~/images/gym2.png"
                 class="w-full h-72 object-cover" alt="專業教練團隊">
            <div class="absolute top-6 right-6 bg-white rounded-xl shadow-lg p-8 w-[70%] max-w-[500px] flex flex-col items-start" style="z-index:2;">
                <h2 class="text-2xl font-bold text-pink-700 mb-2">專業教練團隊</h2>
                <p class="text-gray-800 text-base leading-relaxed">
                    我們擁有經驗豐富的教練群，為您量身打造訓練計畫。
                </p>
            </div>
        </div>
        <!-- 卡片 2：左上 -->
        <div class="relative rounded-2xl shadow-xl overflow-hidden w-full min-h-[240px]">
            <img src="~/images/gym1.jpg"
                 class="w-full h-72 object-cover" alt="先進設備設施">
            <div class="absolute top-6 left-6 bg-white rounded-xl shadow-lg p-8 w-[70%] max-w-[500px] flex flex-col items-start" style="z-index:2;">
                <h2 class="text-2xl font-bold text-pink-700 mb-2">先進設備設施</h2>
                <p class="text-gray-800 text-base leading-relaxed">
                    配備高品質運動器材，讓每一次訓練更加安全有效。
                </p>
            </div>
        </div>
        <!-- 卡片 3：右上 -->
        <div class="relative rounded-2xl shadow-xl overflow-hidden w-full min-h-[240px]">
            <img src="~/images/gym3.jpg"
                 class="w-full h-72 object-cover" alt="舒適環境">
            <div class="absolute top-6 right-6 bg-white rounded-xl shadow-lg p-8 w-[70%] max-w-[500px] flex flex-col items-start" style="z-index:2;">
                <h2 class="text-2xl font-bold text-pink-700 mb-2">舒適環境</h2>
                <p class="text-gray-800 text-base leading-relaxed">
                    寬敞明亮的空間與完善的衛生設施，提升運動體驗。
                </p>
            </div>
        </div>
    </section>





@*     <!-- 你也可以加更多slide -->
    </div>
    <!-- 左右箭頭 -->
    <div class="swiper-button-prev !left-2 !text-pink-500"></div>
    <div class="swiper-button-next !right-2 !text-pink-500"></div>
    <!-- 分頁圓點 -->
    <div class="swiper-pagination"></div>
    </div>
    </div>
    </section> *@

</body>
</html>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @if (TempData["CreateSuccessMessage"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: '@Html.Raw(TempData["CreateSuccessMessage"])',
                timer: 3000,
                confirmButtonColor: '#3085d6'
            });
        </script>
    }

    <script>
        var swiper = new Swiper('.myMainSwiper', {
            loop: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>

}
