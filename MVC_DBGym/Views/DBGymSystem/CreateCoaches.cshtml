@model MVC_DBGym.Models.DBCoaches

@{
    ViewData["Title"] = "CreateCoaches";
}

<h1>CreateCoaches</h1>

<div asp-validation-summary="All" class="text-danger"></div>



<h4>DBCoaches</h4>
