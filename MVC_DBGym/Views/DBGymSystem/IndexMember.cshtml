@{
    ViewData["Title"] = "IndexMember";
    var mId = ViewBag.SessionID;
}

<div class="d-flex justify-content-end mt-3 me-3">
    <a asp-controller="DBGymSystem" asp-action="Logout" class="btn logout-btn me-2">登出</a>
    <a href="@Url.Action("Index")" class="btn logout-btn">回首頁</a>
</div>

<div class="main-container">
    <div class="member-dashboard">
        <h1 class="dashboard-title">Member 控制台</h1>
        <div class="button-group">
            <a href="@Url.Action("Reserve")" class="dashboard-button">預約課程</a>
            <a href="@Url.Action("SelectedCourse", new { id = mId })" class="dashboard-button">已選課程</a>
        </div>
    </div>
</div>

<style>
    body {
        background: radial-gradient(ellipse at 50% 0%, #14c3f666 0%, #181a1b 60%, #11181c 100%);
        font-family: 'Segoe UI', 'Microsoft JhengHei', sans-serif;
        color: #fff;
        min-height: 100vh;
        overflow: hidden;
        position: relative;
    }

    .logout-btn {
        background-color: #ff5252;
        color: #fff;
        transition: transform 0.2s;
    }

        .logout-btn:hover {
            transform: translateY(-3px);
            background-color: #ff1744;
        }

    .main-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    .member-dashboard {
        background-color: rgba(25, 28, 31, 0.9);
        border-radius: 1rem;
        padding: 3rem;
        box-shadow: 0 8px 32px rgba(0,0,0,0.4), 0 4px 12px #14c3f622;
        text-align: center;
    }

    .dashboard-title {
        font-size: 2.4rem;
        margin-bottom: 2rem;
        letter-spacing: 3px;
        text-shadow: 0 3px 8px #29ffbb33;
    }

    .button-group {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
    }

    .dashboard-button {
        background: linear-gradient(90deg, #14c3f6, #29ffbb);
        color: #111;
        font-weight: bold;
        padding: 0.8rem 2rem;
        border-radius: 50px;
        box-shadow: 0 4px 12px rgba(41, 255, 187, 0.4);
        transition: transform 0.2s, box-shadow 0.2s;
        text-decoration: none;
        font-size: 1.1rem;
    }

        .dashboard-button:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(20, 195, 246, 0.5);
        }
</style>
